<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_clock"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="18dp"

        />

    <ImageView
        android:id="@+id/iv_certificate"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/certificate"
        app:layout_constraintStart_toStartOf="@id/iv_clock"
        app:layout_constraintTop_toBottomOf="@id/iv_clock"
        android:layout_marginTop="18dp"
        />

    <ImageView
        android:id="@+id/iv_diagram"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:src="@drawable/diagram"
        app:layout_constraintStart_toStartOf="@id/iv_clock"
        app:layout_constraintTop_toBottomOf="@id/iv_certificate"
        android:layout_marginTop="18dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 Soat"
        app:layout_constraintStart_toEndOf="@id/iv_clock"
        app:layout_constraintTop_toTopOf="@id/iv_clock"
        app:layout_constraintBottom_toBottomOf="@id/iv_clock"
        android:layout_marginStart="26dp"
        android:textSize="18sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tugatish sertifikati"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/iv_certificate"
        app:layout_constraintTop_toTopOf="@id/iv_certificate"
        app:layout_constraintBottom_toBottomOf="@id/iv_certificate"
        android:layout_marginStart="26dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boshlang'ich"
        app:layout_constraintStart_toEndOf="@id/iv_diagram"
        app:layout_constraintTop_toTopOf="@id/iv_diagram"
        app:layout_constraintBottom_toBottomOf="@id/iv_diagram"
        android:layout_marginStart="26dp"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/tv_what_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nimani o`rganasiz?"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toBottomOf="@id/iv_diagram"
        android:layout_marginTop="36dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Macine learning basics program is designed to offer a soli foundation  work-ready skills for ML engineers. The Macine learning basics program is designed to offer a soli foundation  work-ready skills for ML engineers."
        app:layout_constraintTop_toBottomOf="@id/tv_what_about"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="6dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
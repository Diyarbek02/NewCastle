<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/my_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mening kurslarim"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/img"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_courses"
        app:layout_constraintBottom_toTopOf="@id/tv_no_courses1"
        android:layout_marginTop="82dp"
        />

    <TextView
        android:id="@+id/tv_no_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_no_courses1"
        android:text="Looks like you have not enrolled for any course yet"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

    <TextView
        android:id="@+id/tv_no_courses1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kurslar yo'q"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16dp"
        android:textColor="@color/black"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kurs qo'shish"
        android:textColor="@color/white"
        android:background="@drawable/btn_custom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_no_courses"
        android:layout_marginTop="40dp"
        android:paddingStart="70dp"
        android:paddingEnd="70dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>